      <div class="contact-form-container">
        <form class="contact-form">
          <h3>Envíanos un Mensaje</h3>
          
          <div class="form-row">
            <div class="form-group">
              <input type="text" id="firstName" name="firstName" required placeholder="">
              <label for="firstName">Nombre</label>
            </div>
            <div class="form-group">
              <input type="text" id="lastName" name="lastName" required placeholder="">
              <label for="lastName">Apellido</label>
            </div>
          </div>

          <div class="form-group">
            <input type="email" id="email" name="email" required placeholder="">
            <label for="email">Email</label>
          </div>

          <div class="form-group">
            <input type="tel" id="phone" name="phone" placeholder="">
            <label for="phone">Teléfono (opcional)</label>
          </div>

          <div class="form-group">
            <select id="subject" name="subject" required>
              <option value=""></option>
              <option value="prayer">Petición de Oración</option>
              <option value="visit">Primera Visita</option>
              <option value="serve">Quiero Servir</option>
              <option value="baptism">Bautismo</option>
              <option value="events">Eventos</option>
              <option value="other">Otro</option>
            </select>
            <label for="subject">Tema</label>
          </div>

          <div class="form-group">
            <textarea id="message" name="message" required></textarea>
            <label for="message">Tu Mensaje</label>
          </div>

          <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: white;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .text-left {
    text-align: left;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-method {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .method-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #000241 0%, #4a18ff 100%);
    color: white;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .method-details h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1e3a8a;
    margin-bottom: 0.5rem;
  }

  .method-details p {
    color: #6b7280;
    line-height: 1.6;
  }

  .social-media h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1e3a8a;
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #f3f4f6;
    color: #6b7280;
    border-radius: 50%;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: #1e3a8a;
    color: white;
    transform: translateY(-2px);
  }

  .contact-form-container {
    background: #f8fafc;
    padding: 2.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .contact-form h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1e3a8a;
    margin-bottom: 2rem;
    text-align: center;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
    background: white;
    transition: all 0.3s ease;
    outline: none;
  }

  .form-group textarea {
    height: 120px;
    resize: vertical;
  }

  .form-group label {
    position: absolute;
    left: 1rem;
    top: 1rem;
    color: #6b7280;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    border-color: #c30a0a;
    box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.1);
  }

  .form-group input:focus + label,
  .form-group textarea:focus + label,
  .form-group select:focus + label,
  .form-group input:not(:placeholder-shown) + label,
  .form-group textarea:valid + label,
  .form-group select:valid + label {
    top: -0.5rem;
    left: 0.75rem;
    font-size: 0.875rem;
    color: #c30a0a;
    background: white;
    padding: 0 0.25rem;
  }

  .contact-form button {
    width: 100%;
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form-container {
      padding: 1.5rem;
    }
  }
</style>