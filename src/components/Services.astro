<style>
  .services {
    background: #ededed;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .service-card {
    background: #ffffff;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    text-align: center;
    border: 1px solid rgba(30, 58, 138, 0.1);
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .main-service {
    border: 2px solid #8a0000;
    position: relative;
  }

  .main-service::before {
    content: 'PRINCIPAL';
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #8a0000;
    color: #fffcf3;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .service-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #560000 0%, #ff0000 100%);
    color: white;
    border-radius: 50%;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-icon {
    transform: scale(1.1);
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2b2b2b;
    margin-bottom: 1rem;
  }

  .service-times {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .time-slot {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f1f5f9;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
  }

  .day {
    font-weight: 500;
    color: #374151;
  }

  .time {
    font-weight: 600;
    color: #8a0000;
  }

  .service-card p {
    color: #6b7280;
    line-height: 1.6;
  }

  .location-info {
    background: white;
    padding: 2.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .location-info h3 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #560000;
    margin-bottom: 2rem;
  }

  .location-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    text-align: left;
  }

  .address {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .address svg {
    color: #f97316;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .contact-item svg {
    color: #f97316;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .location-details {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .address {
      justify-content: center;
    }
  }
</style>