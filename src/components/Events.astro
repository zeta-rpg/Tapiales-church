<style>
  .events {
    background: #f8fafc;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .event-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .featured {
    grid-column: span 2;
  }

  .featured .event-content {
    display: flex;
    align-items: center;
    padding: 2rem;  
    gap: 2rem;
  }

  .event-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .featured .event-image {
    height: 300px;
    min-width: 400px;
  }

  .event-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .event-card:hover .event-image img {
    transform: scale(1.05);
  }

  .event-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: #ffdbdb;
    color: #550000;
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .event-content {
    padding: 1.5rem;
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ff4d4d 0%, #ba0000 100%);
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-bottom: 1rem;
    flex-shrink: 0;
  }

  .date-day {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .date-month {
    font-size: 0.75rem;
    font-weight: 500;
  }

  .event-info h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e3a8a;
    margin-bottom: 0.75rem;
  }

  .event-info p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .event-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  .detail-item svg {
    color: #c30a0a;
  }

  @media (max-width: 768px) {
    .events-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .featured {
      grid-column: span 1;
    }

    .featured .event-content {
      
      flex-direction: column;
      margin: 1rem auto;
      justify-content: center;
    }
    .event-card .event-content {
      text-align: center;
    }

    .event-date{
      margin: 2rem auto;
    }




    .featured .event-image {
      min-width: auto;
      height: 200px;
    }
  }
</style>